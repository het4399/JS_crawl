{
  "provider": "psi",
  "deviceStrategy": {
    "mobile": true,
    "desktopSamplePercent": 100
  },
  "concurrency": 50,
  "timeouts": {
    "requestMs": 35000
  },
  "retries": {
    "maxAttempts": 2,
    "baseDelayMs": 150,
    "maxDelayMs": 1500
  },
  "freshnessTtlHours": 24,
  "urlEligibility": {
    "sameOriginOnly": true,
    "httpsOnly": true,
    "statusAllow": [200],
    "contentTypeAllow": ["text/html"],
    "respectRobotsTxt": true,
    "respectNoindex": true,
    "paramWhitelist": ["lang", "page"],
    "stripFragment": true
  },
  "output": {
    "storeParsedJson": true,
    "storeRawPayloadDays": 7
  },
  "performance": {
    "batchSize": 50,
    "requestsPerSecond": 100
  }
}

